public class ProfissionalTabela {
	public int numero, tamanho;
	public Profissional[] profissional;
	
    public ProfissionalTabela(int t) {
    	tamanho = t;
    	numero = 0;
    	criarTabela();
    }



public void setNumero(int n){ numero = n; }
public void setTamaho(int t){ tamanho = t; }
public int getNumero(){ return numero; }
public int getTamanho(){ return tamanho; }
public String getProfissional(int i){ //i: indice
	return ("" + profissional[i].getCodigo() + "\t" + profissional[i].getNome() ); 
	}

public void criarTabela(){
	profissional = new Profissional[getTamanho()];    	
	for(int i=0; i<getTamanho(); i++){    	
		DataNasc dNasc = new DataNasc(0,0,0);	
		profissional[i] = new Profissional(0,"",dNasc,'0');	
	}    	
}

public char add(int codigo, String nome, int dia, int mes, int ano, char sexo){
	char resp = '0'; //0: insucesso; 1: sucesso
	if(getNumero() < getTamanho()){    	  
    	int indice = getNumero();
    	profissional[indice].setCodigo(codigo);
    	profissional[indice].setNome(nome);  
    	setNumero(indice + 1);
    	resp = '1';	    	
    }
    return resp;
}

public char rem(int codigo){
	char resp = '0'; //0: insucesso; 1: sucesso
	if(getNumero()>0){
    	for(int i=0; i<getNumero(); i++){ 
    	   if(profissional[i].getCodigo()==codigo){
      	   	  setNumero(getNumero() - 1);
    	   	  resp = '1';
    	   }
    	}
	}
		
 	return resp;
}

 public void add(int indice, int codigo, String nome, int dia, int mes, int ano, char sexo){
	profissional[indice].setCodigo(codigo);
    profissional[indice].setNome(nome);     
    setNumero(getNumero() + 1);
}



}